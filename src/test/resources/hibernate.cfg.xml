<?xml version="1.0" encoding="UTF-8"?>
<hibernate-configuration>
    <session-factory>
        <property name="connection.url">jdbc:hsqldb:mem:market;sql.enforce_size=false</property>
        <property name="connection.driver_class">org.hsqldb.jdbcDriver</property>
        <property name="connection.username">sa</property>
        <property name="connection.password"/>
        <property name="dialect">org.hibernate.dialect.HSQLDialect</property>
        <property name="show_sql">true</property>
        <property name="format_sql">true</property>
        <property name="connection.pool_size">1</property>
        <property name="hbm2ddl.auto">create</property>

        <mapping class="ru.vitaly.entity.Brand"/>
        <mapping class="ru.vitaly.entity.Car"/>
        <mapping class="ru.vitaly.entity.CarBody"/>
        <mapping class="ru.vitaly.entity.Engine"/>
        <mapping class="ru.vitaly.entity.Model"/>
        <mapping class="ru.vitaly.entity.Offer"/>
        <mapping class="ru.vitaly.entity.Transmission"/>
        <mapping class="ru.vitaly.entity.User"/>
    </session-factory>
</hibernate-configuration>